{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc ",
    "dev": "concurrently \" tsc -w\" \"nodemon --exec 'node -r esbuild-register ./src/index.ts' -e ts\"",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "lint:fix": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0 --fix",
    "start": "node -r esbuild-register ./src/index.ts",
    "format:check": "prettier --check ./src",
    "format": "prettier --write ./src  --log-level silent",
    "studio": "npx prisma studio",
    "db:migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "migrate": "pnpm dlx prisma migrate dev && pnpm dlx prisma generate",
    "db:deploy": "pnpm dlx prisma migrate deploy && pnpm dlx prisma generate"
  },
  "keywords": [],
  "author": "",
